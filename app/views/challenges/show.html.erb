<%- model_class = Challenge -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<% if @user_is_creator %>
  <p>You created this challenge!</p>
<% elsif @user_joined %>
  <p>You are part of this challenge!</p>
  <p><%= link_to 'Quit Challenge?',
              quit_challenge_path,
              method: :post %>
<% else %>
  <p><%= link_to 'Join Challenge',
              join_challenge_path,
              method: :post,
              class: 'btn btn-primary'  %></p>
<% end %>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:date) %></dt>
      <dd><pre class="prettyprint"><%= @challenge.date %></pre></dd>
      <dt class="label label-default">If you don't vote you WILL</dt>
      <dd><pre class="prettyprint"><%= @challenge.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:users) %></dt>
      <dd><pre class="prettyprint">
        <% @challenge.members.each do |user| %>
          <p><%= user %></p>
        <% end %>
      </pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              challenges_path, :class => 'btn btn-default'  %>
  <% if @user_is_creator %>

    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                challenge_path(@challenge),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  <% end %>

  <% if @user_joined %>
    <%= link_to 'Share',
                '',
                :class => 'btn btn-primary' %>
  <% end %>
</div>
