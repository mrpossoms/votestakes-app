<%- model_class = Challenge -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<% if @user_joined %>
  <p>You are part of this challenge!</p>
  <p><%= link_to 'Quit Challenge?',
              quit_challenge_path,
              method: :post %>
<% else %>
  <p><%= link_to 'Join Challenge',
              join_challenge_path,
              method: :post,
              class: 'btn btn-primary'  %></p>
<% end %>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:date) %></dt>
      <dd><pre class="prettyprint"><%= @challenge.date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @challenge.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:users) %></dt>
      <dd><pre class="prettyprint">
        <% @challenge.users.each do |user| %>
          <p><%= user %></p>
        <% end %>
      </pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              challenges_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_challenge_path(@challenge), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              challenge_path(@challenge),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
